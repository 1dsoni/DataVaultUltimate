<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryTranslucent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="32dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_password_alert_edit_text_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="textWebPassword"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:textColor="#fff"
                android:textColorHint="#ffffff"
                android:id="@+id/new_password_edit_alert_set_pass_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter New Password"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/get_retyped_pass_alert_edit_text_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="textWebPassword"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:textColor="#fff"
                android:textColorHint="#ffffff"
                android:id="@+id/retype_password_edit_alert_set_pass_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Retype the password here"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                app:cardElevation="15dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/cancel_btn_alert_set_pass_id"
                    android:layout_width="wrap_content"
                    android:text="cancel"
                    android:textColor="#fff"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardElevation="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/ok_btn_alert_set_pass_id"
                    android:layout_width="wrap_content"
                    android:text="OK"
                    android:textColor="#fff"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>


        </RelativeLayout>


        <android.support.v7.widget.CardView
            app:cardElevation="25dp"
            app:cardBackgroundColor="#000"
            app:contentPadding="8dp"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/remove_btn_alert_set_pass_id"
                android:layout_width="wrap_content"
                android:text="remove password"
                android:textSize="18sp"
                android:textColor="#ff0000"
                android:background="#000000"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>