<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/notes_back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.doctor.datavaultultimate.activities.notes_item_info_activity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:visibility="gone"
            android:id="@+id/back_btn_note_info_item_id"
            android:text="Go back"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:background="#d4d2d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="5"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/delete_image_btn_note_info_id"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_delete_forever_black_24dp_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:visibility="gone"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_android_black_24dp"
                    android:id="@+id/image_for_notes_info_item_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

                <EditText
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="#41000000"
                    android:editable="false"
                    android:singleLine="false"
                    android:layout_margin="8dp"
                    android:text="test"
                    android:textSize="24sp"
                    android:id="@+id/edit_notes_notes_info_item_id"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
