<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="32dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/subject_name_alert_edit_text_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:textColor="#fff"
                android:textColorHint="#ffffff"
                android:id="@+id/subject_name_alert_edit_text_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Please Enter A Name"/>
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/subject_name_alert_ok_button_id"
                android:layout_width="wrap_content"
                android:text="OK"
                android:textColor="#fff"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" />

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/subject_name_alert_cancel_button_id"
                android:layout_width="wrap_content"
                android:text="cancel"
                android:textColor="#fff"
                android:background="#00000000"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>