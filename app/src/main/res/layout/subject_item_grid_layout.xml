<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear_layout_grid_view_item_sub_entry_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorDarkGreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/gridview_subject_back"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:visibility="gone"
                android:id="@+id/more_options_grid_item_menu_id"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/subject_icon_image_id"
                    android:src="@drawable/ic_subject_black_24dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/carview_sub_name_gridview_item_id" />
            <android.support.v7.widget.CardView
                android:id="@+id/carview_sub_name_gridview_item_id"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:contentPadding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sub_name_grid_item_id"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:gravity="center"
                    android:text="@string/subject_grid_item_name"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>
            <View
                android:visibility="invisible"
                android:background="@color/colorViewAsUnderLines"
                android:layout_centerHorizontal="true"
                android:id="@+id/view_line_sub_item_grid_id"
                android:layout_below="@id/carview_sub_name_gridview_item_id"
                android:layout_width="match_parent"
                android:layout_height="4px"></View>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/sub_count_grid_item_id"
                android:layout_below="@id/view_line_sub_item_grid_id"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/subject_grid_item_count"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/colorViewAsUnderLines"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/view_line_below_count_sub_item_grid_id"
                android:layout_below="@id/sub_count_grid_item_id"
                android:layout_width="match_parent"
                android:layout_height="4px"></View>
            <TextView
                android:id="@+id/sub_date_grid_item_id"
                android:textColor="#fff"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/view_line_below_count_sub_item_grid_id"
                android:gravity="center"
                android:text="@string/subject_grid_item_date"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/colorViewAsUnderLines"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/view_line_below_date_sub_item_grid_id"
                android:layout_below="@id/sub_date_grid_item_id"
                android:layout_width="match_parent"
                android:layout_height="4px"></View>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>