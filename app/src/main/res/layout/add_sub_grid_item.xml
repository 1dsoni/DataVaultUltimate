<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
        <RelativeLayout
            android:background="@drawable/gridview_subject_back"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/sub_name_grid_item_id"
                android:id="@+id/subject_icon_image_id"
                android:src="@drawable/ic_note_add_black_24dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <TextView
                android:maxLines="2"
                android:layout_centerInParent="true"
                android:id="@+id/sub_name_grid_item_id"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/sub_count_grid_item_id"
                android:layout_below="@+id/sub_name_grid_item_id"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/subject_grid_item_count"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/sub_date_grid_item_id"
                android:textColor="#fff"
                android:layout_below="@+id/sub_count_grid_item_id"
                android:gravity="center"
                android:text="@string/subject_grid_item_date"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
</LinearLayout>