<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.doctor.datavaultultimate.activities.activity_password">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/notes_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/passwiz_imageview_password_activity_id"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="#5c5b5b"
            android:textColor="#000000"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:id="@+id/get_pass_id"
            android:inputType="textPassword"
            android:hint="Enter password here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <Button
               android:background="#00000000"
               android:textColor="#000000"
               android:layout_marginLeft="32dp"
               android:layout_marginTop="16dp"
               android:id="@+id/btn_ok_password_id"
               android:text="ok"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Button
               android:background="#00000000"
               android:textColor="#000000"
               android:layout_marginRight="32dp"
               android:layout_marginTop="16dp"
               android:id="@+id/btn_back_password_id"
               android:text="back"
               android:layout_alignParentRight="true"
               android:layout_centerHorizontal="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

    </LinearLayout>

</LinearLayout>
