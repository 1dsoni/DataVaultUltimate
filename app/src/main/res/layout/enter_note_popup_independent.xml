<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                app:contentPadding="4dp"
                app:cardElevation="30dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:background="@color/colorTransparent"
                        android:padding="8dp"
                        android:drawableLeft="@drawable/ic_date_range_black_24dp"
                        android:textColor="#ffffff"
                        android:id="@+id/btn_date_chooser_enter_note_popup_id"
                        android:layout_alignParentLeft="true"
                        android:text="date"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp" />
                    <Button
                        android:background="@color/colorTransparent"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:padding="8dp"
                        android:textColor="#ffffff"
                        android:id="@+id/btn_time_chooser_enter_note_popup_id"
                        android:layout_alignParentRight="true"
                        android:text="time"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edit_get_text_enter_note_popup_layout_id"
                    android:hint="Enter note here"
                    app:hintEnabled="true"
                    app:hintAnimationEnabled="true"
                    app:errorEnabled="true"
                    android:textColorHint="#af000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:textSize="20sp"
                        android:maxLines="6"
                        android:textColor="#000"
                        android:id="@+id/edit_get_text_enter_note_popup_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:padding="4dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:id="@+id/btn_clear_enter_note__popup_id"
                    android:text="clear Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:text="add note"
                    android:id="@+id/btn_add_note_poopup_enter_note_popup_id"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="cancel"
                    android:id="@+id/btn2_cance_enter_note_popup_id"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:layout_alignParentRight="true"

                    app:cardElevation="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp">

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:background="@color/colorPrimaryDark"
                            android:padding="4dp"
                            android:id="@+id/btn_add_enter_note_popup_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_add_box_black_24dp" />

                    </FrameLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="#dd000000"
                    app:contentPadding="4dp"
                    app:cardElevation="25dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@color/colorTransparent"
                        android:text="back"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:id="@+id/btn_cance_enter_note_popup_id"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </android.support.v7.widget.CardView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>